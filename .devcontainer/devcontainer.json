{
    "name": "Python Codespace",
    "image": "mcr.microsoft.com/devcontainers/python:3.12",
    "postCreateCommand": "pip install flake8 jupyter",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.flake8",
                "njpwerner.autodocstring",
                "github.classroom",
                "ms-python.pylint",
                "DavidAnson.vscode-markdownlint",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter"
            ]
        }
    }
}
